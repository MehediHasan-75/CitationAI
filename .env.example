# .env.example

# Application
# Application name
APP_NAME=Research Paper RAG System
# Application version
APP_VERSION=1.0.0
# Debug mode (True/False)
DEBUG=False
# Log verbosity level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO


# API Configuration
# API host IP/hostname
API_HOST=0.0.0.0
# API port number
API_PORT=8000
# Number of worker processes
API_WORKERS=4


# Database (PostgreSQL)
# Connection URL (format: postgresql://user:password@host:port/dbname)
DATABASE_URL=postgresql://<user>:<password>@<host>:<port>/<dbname>
# Connection pool size
DB_POOL_SIZE=20
# Max overflow connections
DB_MAX_OVERFLOW=40


# Qdrant Vector Search
# Qdrant host address
QDRANT_HOST=localhost
# Qdrant port number
QDRANT_PORT=6333
# Collection name in Qdrant
QDRANT_COLLECTION=research_papers


# Redis Cache
# Redis server host
REDIS_HOST=localhost
# Redis port
REDIS_PORT=6379
# Redis database number
REDIS_DB=0
# Cache TTL in seconds (default: 3600)
CACHE_TTL=3600


# Large Language Model (LLM) API
# LLM server URL
OLLAMA_HOST=http://localhost:11434
# Model name/version
OLLAMA_MODEL=deepseek-r1:8b
# Temperature for generation (0.0 to 1.0)
LLM_TEMPERATURE=0.7
# Max tokens for completion
LLM_MAX_TOKENS=2048


# Embedding Model
# Embedding model name or path
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Embedding vector dimension
EMBEDDING_DIMENSION=384
# Batch size for embedding inference
EMBEDDING_BATCH_SIZE=32


# Text Processing & File Upload
# Size of chunks in tokens
CHUNK_SIZE=512
# Overlap size in tokens between chunks
CHUNK_OVERLAP=50
# Max upload size in MB
MAX_UPLOAD_SIZE=50
# Upload directory path
UPLOAD_DIR=./uploads


# Performance Tuning
# Number of parallel workers
MAX_WORKERS=3
# Enable query caching (True/False)
QUERY_CACHE_ENABLED=True


# Authentication / External API
# Hugging Face Hub token for models
HUGGING_FACE_HUB_TOKEN=<token>
